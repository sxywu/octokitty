<div class="leftPanel">
	<svg class="timeline"></svg>
</div>

<div class="summary">

	<% if session[:access_token] == nil %>
	  <a href="https://github.com/login/oauth/authorize?client_id=<%= @client_id %>">authorize me</a>
	 <% else %>
	<div>
		<input class="inputUser form-control input-lg" type="text" placeholder="enter github user name"></input>
		<button class="submitUser btn btn-primary">Hit me!</button>
	</div>
	 <% end %>

	<svg class="graph hidden"></svg>

	<table class="popularity table table-hover">
		<% @popular_users.each_with_index do |username, i| %>
			<tr>
				<td><%= i + 1 %>.</td>
				<td><%= username %></td>
				<td>searches</td>
			</tr>
		<% end %>
	</table>

</div>